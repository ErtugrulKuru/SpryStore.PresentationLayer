@model List<Employee>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Personel Fotoğraf</th>
        <th>Personel Adı</th>
        <th>Personel Soyadı</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.EmployeeID</td>
            <td>@item.EmployeeImage</td>
            <td>@item.EmployeeName</td>
            <td>@item.EmployeeSurname</td>
            <td><a href="/Employee/DeleteEmployee/@item.EmployeeID" class="btn btn-outline-danger">Sil</a></td>
            <td><a href="/Employee/UpdateEmployee/@item.EmployeeID" class="btn btn-outline-success">Güncelle</a></td>
        </tr>
        
    }        
</table>
<a href="/Employee/AddEmployee/" class="btn btn-outline-info">Yeni Personel Girişi</a>